@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>

    <meta name="viewport" content="width=device-width" />

    <title>Cadastro de Clientes</title>

    <link href="~/Scripts/bootstrap.min.js" />

</head>

<body>
    <h1>Cadastro de Clientes</h1>
    <div ng-app="Homeapp" ng-controller="HomeController">

        <div class="container">

            <div class="row">
                <div class="col-sm-8">

                    <div class="form-group">

                        <label>Email: </label>

                        <input type="text" ng-model="register.Email" class="form-control" />

                    </div>
                    <br />
                    <div class="form-group">

                        <label>Password: </label>

                        <input type="password" ng-model="register.Password" class="form-control" />

                    </div>
                    <br />
                    <div class="form-group">

                        <label>Nome: </label>

                        <input type="text" ng-model="register.Nome" class="form-control" />

                    </div>
                    <br />
                    <div class="form-group">

                        <label>Endereco: </label>

                        <input type="text" ng-model="register.Endereco" class="form-control" />

                    </div>
                    <br />
                    <div class="form-group">

                        <label>Cidade: </label>

                        <input type="text" ng-model="register.Cidade" class="form-control" />

                    </div>
                    <br />


                    <input type="button" class="btn btn-default" ng-click="savedata()" name="Salvar" value="{{btntext}}" onClick="window.location.reload()" />
                    <br />
                    <br />
                    @using (Html.BeginForm("GetCliente", "Home", FormMethod.Get))
                    {
                        <input type="submit" value="Listar Clientes" name="Listar Clientes" />
                    }



                </div>
            </div>

        </div>

    </div>

    <script src="~/Scripts/angular.min.js"></script>

    <script src="~/Scripts/AngularController/HomeAngularJS.js"></script>

</body>

</html>