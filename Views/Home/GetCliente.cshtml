@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>

    <meta name="viewport" content="width=device-width" />

    <title>Lista de Clientes</title>

    <style>

        .tableData {
            border-left: solid 1px #D8C3C3;
            border-top: solid 1px #D8C3C3;
        }
        .tableData tr {
        }

        .tableData td, .tableData th {
            border-right: solid 1px #D8C3C3;
            border-bottom: solid 1px #D8C3C3;
            text-align: left;
            padding: 5px;
        }

        .tableData td {
        }

        .tableData th {
            background-color: #FAFAFA;
            padding: 7px 5px;
            border-bottom-color: #9C9C9C;
        }

        .odd {
            background-color: #f3f3f3;
        }

        .even {
            background-color: #ffffff;
        }
    </style>

</head>

<body ng-app="Homeapp">

    <div ng-controller="HomeController">

        <h1>Lista de Clientes</h1>

        <table class="tableData">

            <tr>

                <th>Id</th>

                <th>Email</th>

                <th>Password</th>

                <th>Nome</th>

                <th>Endereco</th>

                <th>Cidade</th>

                <th>Ações</th>

            </tr>

            <tr ng-repeat="e in record" ng-class-even="'even'" ng-class-odd="'odd'">

                <td>{{e.Id}}</td>

                <td>{{e.Email}}</td>

                <td>{{e.Password}}</td>

                <td>{{e.Nome}}</td>

                <td>{{e.Endereco}}</td>

                <td>{{e.Cidade}}</td>

                <td><a href="/Home/UpdateCliente?id={{e.Id}}">Update</a></td>

                <td><a ng-click="deleterecord(e.Id)">Delete</a></td>

            </tr>

        </table>
        <br />
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            <input type="submit" value="Cadastro" name="Cadastro" />
        }
    </div>

    <script src="~/Scripts/angular.min.js"></script>

    <script src="~/Scripts/AngularController/HomeAngularJS.js"></script>

</body>

</html>
